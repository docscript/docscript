{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es6",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./old/**/*.ts",
        "!./old/**/*.tsx",
        "!./doc/old/**/*.ts",
        "!./doc/old/**/*.tsx",
        "!./node_modules/**/*.ts",
        "!./node_modules/**/*.tsx",
        "../node_modules/typescript/lib/typescriptServices.d.ts"
    ],
    "files": [
        "./doc/defines.d.ts",
        "./doc/gen.ts",
        "./doc/index.ts",
        "./doc/items.ts",
        "./doc/test.ts",
        "./doc/tests/files/simple.ts",
        "./doc/tests/index.ts",
        "./doc/tests/simple.ts",
        "./doc/tests/utils.ts",
        "./doc/tools.ts",
        "./doc/utils.ts",
        "./doc/writer.ts",
        "./lib/autobind.ts",
        "../node_modules/typescript/lib/typescriptServices.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
