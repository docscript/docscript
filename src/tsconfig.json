{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "jsx": "preserve",
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true
    },
    "compileOnSave": false,
    "exclude": [
        "doc/tests/namespaces/typings",
        "node_modules",
        "bower_components",
        "example"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
